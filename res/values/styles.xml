<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_title_text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20.0dip</item>
    </style>

    <style name="bottombar">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffa1a1a1</item>
    </style>

    <style name="topbar">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff585d5e</item>
    </style>

    <style name="set_content_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff545454</item>
    </style>

    <style name="set_content_text_introduce">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff919192</item>
    </style>

    <style name="login_text_register">
        <item name="android:textColor">#ff8b8b8b</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">20.0dip</item>
    </style>

    <style name="login_text_edt" parent="set_content_text_introduce">
        <item name="android:layout_marginRight">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="pop_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/diy_item_bg</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
    </style>

    <style name="anim_pop">
        <item name="android:windowEnterAnimation"> @anim/popup_appear_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_disappear_anim</item>
    </style>

    <style name="drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="drop_down_list_footer_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
    </style>

    <style name="drop_down_list_header_font_style">
        <item name="android:textColor">@color/drop_down_list_header_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="drop_down_list_header_second_font_style">
        <item name="android:textColor">@color/drop_down_list_header_second_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="drop_down_list_footer_font_style">
        <item name="android:textColor">@color/drop_down_list_footer_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="widget_listview">
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@drawable/comment_listview_item_selector</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:divider">@drawable/listview_divider_line</item>
        <item name="android:dividerHeight">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="page_no_data_style">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffb1b1b0</item>
        <item name="android:text">@string/page_no_data_message</item>
    </style>

    <style name="adptitle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="adpcontent">
        <item name="android:textColor">#acacac</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="adpdate">
        <item name="android:textColor">#acacac</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/base_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>